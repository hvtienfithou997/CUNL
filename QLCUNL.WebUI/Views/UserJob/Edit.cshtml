@model QLCUNL.Models.UserJob

@{
    ViewData["Title"] = "Sửa JOB";
}
<h3>Sửa JOB của tôi</h3>
<hr />
<div class="row">
    <div class="col-md-6">

        <div class="form-group">
            <label class="control-label">Job</label>
            <input readonly class="form-control" id="job_name" />
        </div>

        <div class="form-group">
            <label asp-for="ngay_nhan_job" class="control-label">Ngày nhận Job</label>
            <input readonly class="form-control" id="ngay_nhan_job" />
        </div>
        <div class="form-group">
            <button class="btn-size btn btn-primary" onclick="onUpdate()"><i class="icon icon-update"></i>Cập nhật</button>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="thuoc_tinh" class="control-label">Thuộc tính</label>
            @Html.Raw(ViewBag.thuoc_tinh_checkbox)
        </div>
    </div>
</div>

<div>
    <a asp-action="All">Quay lại danh sách</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    let id = "@ViewBag.id";

</script>
<script asp-append-version="true" src="~/js/user_job_edit.js"></script>

