@model QLCUNL.Models.NoteUngVien

@{
    ViewData["Title"] = "Edit";
}



<h4>Sửa note ứng viên</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="form-group" style="display:none;">
            <label asp-for="id_note_ung_vien" class="control-label"></label>
            <input asp-for="id_note_ung_vien" class="form-control" id="id_note_ung_vien" />
            <span asp-validation-for="id_note_ung_vien" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="id_ung_vien" class="control-label">ID ứng viên</label>
            <input asp-for="id_ung_vien" readonly class="form-control" id="id_ung_vien" />
            <span asp-validation-for="id_ung_vien" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ten_ung_vien" class="control-label">Tên ứng viên</label>
            <input asp-for="ten_ung_vien" readonly class="form-control" id="ten_ung_vien" />
            <span asp-validation-for="ten_ung_vien" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ghi_chu" class="control-label"></label>
            <textarea id="ghi_chu" class="form-control" placeholder="Ghi chú"></textarea>
            <span asp-validation-for="ghi_chu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="thuoc_tinh" class="control-label">Thuộc tính</label>
            @Html.Raw(ViewBag.thuoc_tinh_checkbox)
        </div>
        <div class="form-group">
            <button class="btn btn-primary" onclick="onUpdate()">Cập nhật</button>
        </div>
    </div>
</div>

<div>
    <a asp-action="All">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    let id = "@ViewBag.id";
</script>
<script asp-append-version="true" src="~/js/note_ung_vien_edit.js"></script>