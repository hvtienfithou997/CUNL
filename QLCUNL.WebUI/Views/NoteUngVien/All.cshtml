@model IEnumerable<QLCUNL.Models.NoteUngVien>

@{
    ViewData["Title"] = "Danh sách Note ứng viên";
}

<div>
    <h3>Danh sách Note Ứng Viên</h3>
   
</div>
<label>Tìm kiếm theo: </label>
<div class="row">
    <div class="col-sm-6">
        <div class="div-input form-group">
            <input placeholder="Tìm kiếm" id="term" name="term" class="form-control" />
            
            <button id="btn_search" class="btn-size btn btn-primary">Tìm</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        
        <div id="div_thuoc_tinh" class="collapse">@Html.Raw(ViewBag.thuoc_tinh_checkbox)</div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
         <a asp-action="Add" class="btn-size btn btn-primary" style="color: #fff">Tạo mới</a>
        <table class="table table-striped">
            <thead class="thead-light">
            <tr>
                <th>
                    Ứng viên
                </th>
                <th>
                    Ghi chú
                </th>
                <th>
                    Ngày ghi
                </th>
                <th>
                    Người tạo
                </th>
                
                <th style="width: 150px"></th>
            </tr>
            </thead>
            <tbody id="div_data">
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Đánh dấu thuộc tính</h4>
            </div>
            <div class="modal-body" id="thuoc_tinh_du_lieu">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-info" data-submit="submit" onclick="onCreateThuocTinh('@QLCUNL.Models.LoaiThuocTinh.NOTE_UNG_VIEN')">Lưu lại</button>
            </div>
        </div>
    </div>
</div>
<script asp-append-version="true" type="text/javascript" src="~/js/note_ung_vien_all.js"></script>
<script>
    let id_uv_search = "@ViewBag.id_uv_search";
    $(function () {

        $(`[name='term']`).keypress(function (event) {
            if (event.keyCode == 13) {
                search(id_uv_search);
            }
        });
        $("#btn_search").click(function () {
            search(id_uv_search);
        });
        search(id_uv_search);
    })
</script>