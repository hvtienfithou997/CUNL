</script>
<div class="row">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email người gửi: </label>
                    <input type="email" class="form-control" id="email_nguoi_gui" value="" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tên người gửi: </label>
                    <input type="text" class="form-control" id="ten_nguoi_gui" value="" />
                </div>
            </div>
        </div>

        <div id="add_key" class="custom_nguoi_nhan form-inline">
            <div class="form-group form_noi_dung">
                <input type="text" class="form-control c-input" disabled="disabled" value="Email" name="key-" id="email">
                <textarea type="text" class="form-control w-textarea" rows="5" id="nguoi_nhan" name="text-"></textarea>
            </div>
            <div class="form-group form_noi_dung">
                <input type="text" class="form-control c-input" disabled="disabled" value="Name" name="key-" id="name_nguoi_nhan">
                <textarea type="text" class="form-control w-textarea" rows="5" id="ten_nguoi_nhan" name="text-" value=""></textarea>
            </div>
        </div>
        <div class="form-group text-right">
            <button class="btn btn-size btn-danger" onclick="moreInfo()">Thêm cột</button>
        </div>

        <div class="form-group">
            <label>Tiêu đề gửi: </label>
            <input type="text" class="form-control" id="tieu_de" value="" />
        </div>
    </div>
   
    <div class="col-md-12">
        <div class="form-group">
            <label>Nội dung: </label>
            <textarea type="text" id="noi_dung" class="form-control" name="noi_dung" value="" rows="4"></textarea>
        </div>
    </div>  
    <div class="col-md-12">
        <input type="file" id="file_upload" value="" multiple/>
        <button type='button' class='btn btn-info' id='btn_upload' onclick="UploadFile()">Upload</button>
        <input type="text" name="name" class="form-control d-none" value="" id="receive_link_mail" />
    </div>
    <div class="col-md-12 text-right">
        <button class="btn btn-size btn-success" id="btn_gui_mail" onclick="onSendMail()"> Gửi mail</button>
    </div>
    

    <div class="col-md-5 d-none">
        <label>Hướng dẫn: </label>
        <div class="form-group">
            <img src="~/lib/image_2020_07_15T07_38_31_768Z.png" class="img-responsive" alt="Hướng dẫn" />
        </div>
    </div>
</div>
