<div class="row">
    <div class="col-md-6">
        <h2>Thay đổi mật khẩu</h2>
        <div class="form-group">
            <label>Nhập mật khẩu cũ</label>
            <input type="type" class="form-control" id="old-password" name="old-password" value="" required="" />
        </div>
        <div class="form-group">
            <label>Mật khẩu mới</label>
            <input type="type" class="form-control" id="new-password" name="new-password" value="" required="" />
        </div>
        <div class="form-group">
            <label>Nhập lại mật khẩu mới</label>
            <input type="type" class="form-control" id="re-new-password" name="re-new-password" value="" required="" />
        </div>
        <div class="form-group" style="width: 30%">
            <input type="button" onclick="onChangePass()" class="btn btn-outline-primary" id="btn-change-pass" name="btn-change-pass" value="Đổi mật khẩu" />
        </div>
    </div>
</div>

<script asp-append-version="true" src="~/js/user_edit.js"></script>
