@using QLCUNL.Models
@model QLCUNL.Models.ThuocTinhDuLieu

@{
    ViewData["Title"] = "Sửa thuộc tính";
}

<h1>Edit</h1>

<h3>Sửa thuộc tính dữ liệu</h3="">
<hr />
<div class="row">
    <div class="col-md-4">
            <div class="form-group" style="display:none">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Đối tượng</label>
                <select class="form-control" asp-for="loai_obj" asp-items="Html.GetEnumSelectList<LoaiThuocTinh>()">
                    <option selected="selected" value="-1">---Thuộc tính---</option>
                </select>
                <span asp-validation-for="loai_obj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_obj" class="control-label"></label>
                <input asp-for="id_obj" class="form-control" id="id_obj"/>
                <span asp-validation-for="id_obj" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input onclick="onUpdate()" value="Save" class="btn btn-primary" />
            </div>
    </div>
</div>

<div>
    <a asp-action="all">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script asp-append-version="true" src="js/thuoc_tinh_du_lieu_edit.js"></script>